{% extends 'base.html.twig' %}

{% block title %}Recurrence{% endblock %}

{% block body %}
    <h1>Recurrence</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recurrence.id }}</td>
            </tr>
            <tr>
                <th>Morning</th>
                <td>{{ recurrence.morning }}</td>
            </tr>
            <tr>
                <th>Noon</th>
                <td>{{ recurrence.noon }}</td>
            </tr>
            <tr>
                <th>Evening</th>
                <td>{{ recurrence.evening }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ recurrence.start ? recurrence.start|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ recurrence.end ? recurrence.end|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('recurrence_index') }}">back to list</a>

    <a href="{{ path('recurrence_edit', {'id': recurrence.id}) }}">edit</a>

    {{ include('recurrence/_delete_form.html.twig') }}
{% endblock %}
