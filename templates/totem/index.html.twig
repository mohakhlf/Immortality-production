{% extends 'base.html.twig' %}

{% block title %}Totem{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="offset-2 col-8 d-flex flex-column align-items-center mt-3">
            {# <h1>={ Totem }=</h1> #}
            <h3>Score : {{ totem.score }}</h3>
            <div class="text-center w-50">
                <img class="img-fluid" src="{{ asset('assets/images/' ~totem.image.name~ '.png') }}" alt="totem picture">
            </div>
            <div class="d-flex flex-column align-items-center">
                <a class="btn btn-success btn-lg mb-3 " href="{{ path('totem_up') }}">I took my drugs</a>
                <a class="btn btn-danger btn-sm mb-3" href="{{ path('totem_down') }}">I didn't took my drugs</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
