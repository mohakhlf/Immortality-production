{% extends 'base.html.twig' %}

{% block title %}Totem{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="offset-2 col-8 text-center">
            <h1>={ Totem }=</h1>
            <h3>Score : {{ totem.score }}</h3>
            <div class="text-center">
                <img class="image-fluid" src="{{ asset('assets/images/' ~totem.image.name~ '.png') }}" alt="totem picture">
            </div>
            <div>
                <form method="post">
                    <input type="number" placeholder="{{ totem.score - 1 }}" value="{{ totem.score - 1 }}">
                    <button type="submit">I didn't took my drugs</button>
                </form>
                <form method="post">
                    <input type="number" placeholder="{{ totem.score + 1 }}" value="{{ totem.score + 1 }}">
                    <button type="submit">I took my drugs</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
